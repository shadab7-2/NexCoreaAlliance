<header class="bg-white shadow">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo / Brand -->
      <div class="flex items-center space-x-3">
        <a href="/" class="flex items-center">
          <div class="h-10 w-10 rounded-full bg-indigo-600 flex items-center justify-center text-white font-bold">P</div>
          <span class="ml-3 text-xl font-semibold text-gray-800">Prodify</span>
        </a>
      </div>

      <!-- Nav links -->
      <nav class="hidden md:flex space-x-6">
        <a href="/" class="text-gray-600 hover:text-indigo-600">Home</a>
        <a href="/products" class="text-gray-600 hover:text-indigo-600">Products</a>
        <a href="/products/new" class="text-gray-600 hover:text-indigo-600">Add Product</a>
      </nav>

      <!-- Right side actions -->
      <div class="flex items-center space-x-4">
        <button class="hidden sm:inline-block px-4 py-2 border border-indigo-600 text-indigo-600 rounded hover:bg-indigo-50">Sign in</button>
        <button class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700">Get Started</button>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" aria-label="Open menu" class="p-2 rounded-md text-gray-600 hover:bg-gray-100">
          <!-- simple hamburger -->
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu (hidden by default, add simple JS to toggle) -->
    <div id="mobile-menu" class="hidden md:hidden mt-3 pb-4">
      <a href="/" class="block py-2 text-gray-700">Home</a>
      <a href="/products" class="block py-2 text-gray-700">Products</a>
      <a href="/products/new" class="block py-2 text-gray-700">Add Product</a>
    </div>
  </div>
</header>
